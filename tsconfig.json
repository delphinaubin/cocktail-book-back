{
  "compilerOptions": {
      "target": "es2017",
      "lib": ["es2017"],
      "types": ["reflect-metadata", "jest"],
      "module": "commonjs",
      "sourceMap": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}